<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvFolder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="5dp"
        android:text="@string/files"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivMsg"
        app:layout_constraintEnd_toStartOf="@+id/ivMsg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivMsg" />

    <ImageView
        android:id="@+id/ivMsg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/rounded_rect_drawable"
        android:padding="7dp"
        android:backgroundTint="@color/orange"
        android:src="@drawable/ic_mail"
        android:layout_marginEnd="10dp"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivEdit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/rounded_rect_drawable"
        android:backgroundTint="@color/blue_theme"
        android:padding="7dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="@+id/ivMsg"
        app:layout_constraintEnd_toStartOf="@+id/ivMove"
        app:layout_constraintTop_toTopOf="@+id/ivMsg"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/ivMove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded_rect_drawable"
        android:backgroundTint="@color/blue_theme"
        android:padding="7dp"
        android:src="@drawable/ic_move"
        app:layout_constraintBottom_toBottomOf="@+id/ivEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivEdit"
        app:tint="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>